<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    width="100%"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Widget"
                title="热词配置"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <hotWordItems
                        jcr:primaryType="cq:Widget"
                        name="./hotWords"
                        title="热词配置"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            layout="form"
                            xtype="multiFieldPanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <hotWord
                                    jcr:primaryType="cq:Widget"
                                    width="95%"
                                    dName="hotWord"
                                    fieldLabel="热词"
                                    maxLength="{Long}10"
                                    xtype="textfield"/>
                                <searchWord
                                    jcr:primaryType="cq:Widget"
                                    dName="searchWord"
                                    fieldLabel="热词搜索词"
                                    maxLength="{Long}10"
                                    width="95%"
                                    xtype="textfield"/>
                                <topUrls
                                    jcr:primaryType="cq:Widget"
                                    dName="topUrls"
                                    fieldLabel="置顶文章"
                                    orderable="{Boolean}false"
                                    xtype="multifield"/>
                                <tags
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="标签"
                                    dName="tags"
                                    xtype="tags"/>
                                <redirectLink
                                    jcr:primaryType="cq:Widget"
                                    width="95%"
                                    fieldLabel="跳转链接"
                                    dName="redirectLink"
                                    xtype="textfield"/>
                            </items>
                        </fieldConfig>
                    </hotWordItems>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="cq:Widget"
                title="今日更新配置"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <componentTitle
                        jcr:primaryType="cq:Widget"
                        fieldLabel="组件自定义标题"
                        name="./componentTitle"
                        xtype="textfield"/>
                    <moreButtonTitle
                        jcr:primaryType="cq:Widget"
                        fieldLabel="换一批按钮自定义文字"
                        name="./moreButtonTitle"
                        xtype="textfield"/>
                    <articles
                        jcr:primaryType="cq:Widget"
                        fieldLabel="文章区域设置"
                        name="./articles"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            layout="form"
                            xtype="multiFieldPanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <articlePath
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="{Boolean}false"
                                    dName="articlePath"
                                    editable="{Boolean}false"
                                    fieldLabel="今日更新文章"
                                    rootPath="/content/china/accl/ch"
                                    width="95%"
                                    xtype="pathfield"/>
                                <thubnailTitle
                                    jcr:primaryType="cq:Widget"
                                    dName="thubnailTitle"
                                    fieldLabel="文章缩略图标题"
                                    maxLength="{Long}4"
                                    width="95%"
                                    xtype="textfield"/>
                                <titleBackGround
                                    jcr:primaryType="cq:Widget"
                                    dName="titleBackGround"
                                    editable="{Boolean}true"
                                    fieldLabel="缩略图标题背景色"
                                    type="select"
                                    width="95%"
                                    xtype="selection">
                                    <options jcr:primaryType="cq:WidgetCollection">
                                        <option1
                                            jcr:primaryType="nt:unstructured"
                                            text="蓝色"
                                            value="blue"/>
                                        <option2
                                            jcr:primaryType="nt:unstructured"
                                            text="红色"
                                            value="red"/>
                                    </options>
                                </titleBackGround>
                            </items>
                        </fieldConfig>
                    </articles>
                </items>
            </tab2>
        </items>
    </items>
</jcr:root>
